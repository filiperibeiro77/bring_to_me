<section class="new-user">
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<h1>Criação de conta</h1>
			</div>
		</div>

		<div class="row">
			<div class="container">
				<div class="stepwizard col-md-offset-3">
					<div class="stepwizard-row setup-panel">
						<div class="stepwizard-step">
							<a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
						</div>
						<div class="stepwizard-step">
							<a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
						</div>
						<div class="stepwizard-step">
							<a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class='users-new'>  
					<div class="row setup-content" id="step-1">
						<h3>1. Login</h3>

						<%= form_for @user do |f| %>
						<%= f.fields_for :adress do |ff| %>
						<%= f.fields_for :contact do |ff| %>
						<%= render 'shared/error_messages', object: f.object %>

						<div class="field">
							<%= f.label :user_name, 'Nome' %><br>
							<%= f.text_field :user_name %>
						</div>

						<div>
							<%= ff.label :user_email, 'Email' %><br>
							<%= ff.text_field :user_email %>
						</div>

						<div class="field">
							<%= f.label :password, 'Senha' %><br>
							<%= f.password_field :password %>
						</div>

						<div class="field">
							<%= f.label :password_confirmation, 'Confirmação de Senha' %><br>
							<%= f.password_field :password_confirmation%>
						</div>  
						<button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Próximo</button>
					</div>

					<div class="row setup-content" id="step-2">
						<h3>2. Informações pessoais</h3>

						<div class="field">
							<%= f.label :user_cpf, 'CPF' %><br>
							<%= f.text_field :user_cpf %>
						</div>

						<div class="field">
							<%= f.label :user_sex, 'Sexo' %><br>
							<%= f.text_field :user_sex%>
						</div>

						<div class="field">
							<%= f.label :user_date_of_birth, 'Data de Nascimento' %><br>
							<%= f.date_field :user_date_of_birth%>
						</div>

						<div>
							<%= ff.label :user_home_phone, 'Telefone Residencial' %><br>
							<%= ff.text_field :user_home_phone %>
						</div>

						<div>
							<%= ff.label :user_cel_phone, 'Telefone Celular' %><br>
							<%= ff.text_field :user_cel_phone %>
						</div>

						<% end %> 
						<button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Próximo</button>
					</div>

					<div class="row setup-content" id="step-3">
						<h3>3. Endereço</h3>

						<div>
							<%= ff.label :public_place, 'Endereço' %><br>
							<%= ff.text_field :public_place %>
						</div>

						<div>
							<%= ff.label :adress_cep, 'Cep' %><br>
							<%= ff.text_field :adress_cep %>
						</div>

						<div>
							<%= ff.label :adress_state , 'Estado' %><br>
							<%= ff.text_field :adress_state %>
						</div>

						<div>
							<%= ff.label :adress_city, 'Cidade' %><br>
							<%= ff.text_field :adress_city %>
						</div>

						<div>
							<%= ff.label :neighborhood, 'Bairro' %><br>
							<%= ff.text_field :neighborhood %>
						</div>

						<div>
							<%= ff.label :adress_number, 'Número' %><br>
							<%= ff.text_field :adress_number %>
						</div>

						<div>
							<%= ff.label :adress_complement, 'Complemento' %><br>
							<%= ff.text_field :adress_complement %>
						</div>

						<% end %>   

						<center><%= f.submit class: 'btn btn-success btn-lg pull-right' %></center>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>