<section class="new-user">
    <div class="container">
        <div class="row">
          <div class="col-md-3">
            <div class="profile-sidebar">
              <!-- SIDEBAR USERPIC -->
              <div class="profile-userpic">
                <img class="img-responsive img-effect" src="http://lorempixel.com/200/200/people">
              </div>
              <!-- END SIDEBAR USERPIC -->
              <!-- SIDEBAR USER TITLE -->
              <div class="profile-usertitle">
                <div class="profile-usertitle-name">
                  Marcus Doe
                </div>
                <div class="profile-usertitle-job">
                  Viajante
                </div>
              </div>
              <!-- END SIDEBAR USER TITLE -->
              <!-- SIDEBAR BUTTONS -->
              <div class="profile-userbuttons">

              <% if logged_in? %>
                <% if current_user.id != @advertisement.traveler_id %>
                <%= link_to 'Mensagem', new_message_path(:receiver_id => @advertisement.traveler_id, :advertisement_id => @advertisement.id) , class: 'btn btn-danger btn-sm' %>
                <% end %>
              <% end %>
              </div>
              <!-- END SIDEBAR BUTTONS -->

