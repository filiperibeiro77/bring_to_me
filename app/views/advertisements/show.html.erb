<section class="new-user">
    <div class="container">
        <div class="row">
          <div class="col-md-3">
            <div class="profile-sidebar">
              <!-- SIDEBAR USERPIC -->
              <div class="profile-userpic">
                <img class="img-responsive img-effect" src="http://lorempixel.com/200/200/people">
              </div>
              <!-- END SIDEBAR USERPIC -->
              <!-- SIDEBAR USER TITLE -->
              <div class="profile-usertitle">
                <div class="profile-usertitle-name">
                  <%= @advertisement.traveler.user_name %>
                </div>
                <div class="profile-usertitle-job">
                  Avaliação:
                  <% if @advertisement.traveler.qualification %>
                      <%= @advertisement.traveler.qualification %>
                  <% else %>
                      <p>avalie</p>
                  <% end %>
                  <br />
                  <br />

              <% if logged_in? %>
                <% if current_user.id != @advertisement.traveler_id %>
                  <%= form_tag("/advertisements/#{@advertisement.id}", method: "get", remote: false) do %>

                  <div class="btn-group" >
                    <label class="btn btn-primary">1
                    <%= radio_button_tag 'qualification', '1' %>
                    </label>
                    <label class="btn btn-primary">2
                    <%= radio_button_tag 'qualification', '2' %>
                    </label>
                    <label class="btn btn-primary">3
                    <%= radio_button_tag 'qualification', '3' %>
                    </label>
                    <label class="btn btn-primary">4
                    <%= radio_button_tag 'qualification', '4' %>
                    </label>
                    <label class="btn btn-primary">5
                    <%= radio_button_tag 'qualification', '5' %>
                    </label>

                    <%= submit_tag "Avaliar", class: "btn btn-sm btn-default" %>
                    
                    <% rate(params[:qualification], @advertisement.traveler.id) %>
                  </div>

                  <% end %>
                <% end %>
              <% end %>

               </div>
              </div>
              <!-- END SIDEBAR USER TITLE -->
              <!-- SIDEBAR BUTTONS -->
              <div class="profile-userbuttons">

              <% if logged_in? %>
                <% if current_user.id != @advertisement.traveler_id %>
                <%= link_to 'Mensagem', new_message_path(:receiver_id => @advertisement.traveler_id, :advertisement_id => @advertisement.id) , class: 'btn btn-danger btn-sm' %>
                <% end %>
              <% end %>
              </div>
              <!-- END SIDEBAR BUTTONS -->

              <!-- SIDEBAR MENU -->
              <!-- 
              <div class="profile-usermenu">
                <ul class="nav">
                  <li class="active">
                    <a href="#">
                    <i class="glyphicon glyphicon-home"></i>
                    Overview </a>
                  </li>
                  <li>
                    <a href="#">
                    <i class="glyphicon glyphicon-user"></i>
                    Account Settings </a>
                  </li>
                  <li>
                    <a href="#" target="_blank">
                    <i class="glyphicon glyphicon-ok"></i>
                    Tasks </a>
                  </li>
                  <li>
                    <a href="#">
                    <i class="glyphicon glyphicon-flag"></i>
                    Help </a>
                  </li>
                </ul>
              </div>
              -->
              <!-- END MENU -->
            </div>
          </div>

          <div class="col-md-9 bg-white">
            <div class='users-new'>
              <div class="section-title">
                <% if logged_in? %>
                  <% if current_user.id == @advertisement.traveler_id %>
                  <p>
                    <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i>
                    <%= link_to 'Editar', edit_advertisement_path(id: @advertisement.id), class: '' %>
                  </p>
                  <% else %>
                  <% end %>
                <% end %>
                <img class="img-responsive img-effect" src="http://lorempixel.com/1024/200/city">
                <h1 class="city-title"><%= @advertisement.destiny %></h1>  
                <p>
                  <b>Descrição:  </b><%= @advertisement.description %>
                </p>  
                <p>
                  <b>Data da viagem:  </b><%= @advertisement.travel_date %>
                </p>  
                <p>
                  <b>Tipo de itens:  </b><%= @advertisement.type_itens %>
                </p>
              </div>
              <% if logged_in? %>
                <% if current_user.id != @advertisement.traveler_id %>
                <div><%= link_to 'Contratar', new_message_path(:receiver_id => @advertisement.traveler_id, :advertisement_id => @advertisement.id) , class: 'btn btn-lg btn-info' %></div>
                <% end %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
</section>
