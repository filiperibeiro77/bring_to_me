              <!-- END MENU -->
            </div>
          </div>

          <div class="col-md-9 bg-white">
            <div class='users-new'>
              <div class="section-title">
                <% if logged_in? %>
                  <% if current_user.id == @advertisement.traveler_id %>
                  <p>
                    <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i>
                    <%= link_to 'Editar', edit_advertisement_path(id: @advertisement.id), class: '' %>
                  </p>
                  <% else %>
                  <% end %>
                <% end %>
                <img class="img-responsive img-effect" src="http://lorempixel.com/1024/200/city">
                <h1><%= @advertisement.destiny %></h1>  
                <p>
                  <b>Descrição:  </b><%= @advertisement.description %>
                </p>  
                <p>
                  <b>Data da viagem:  </b><%= @advertisement.travel_date %>
                </p>  
                <p>
                  <b>Tipo de itens:  </b><%= @advertisement.type_itens %>
                </p>
              </div>
              <% if logged_in? %>
                <% if current_user.id != @advertisement.traveler_id %>
                <div><%= link_to 'Contratar', new_message_path(:receiver_id => @advertisement.traveler_id, :advertisement_id => @advertisement.id) , class: 'btn btn-lg btn-info' %></div>
                <% end %>
              <% end %>
          </div>
