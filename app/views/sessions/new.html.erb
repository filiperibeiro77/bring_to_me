<section class="new-user">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
							<div class='users-new'>
									<%= form_for :session, url: sign_in_path do |f| %>
										<div class="field">
											<%= f.label :user_email %><br />
											<%= f.email_field :user_email, autofocus: true %>
										</div>

										<div class="field">
											<%= f.label :password %><br />
											<%= f.password_field :password, autocomplete: "off" %>
										</div>

										<div class="actions">
											<center><%= f.submit "Log in" , class: 'btn btn-primary' %></center>
										</div>

										<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
									<% end %>

								</div>
						</div>
				</div>
		</div>
</section>
